{
	"compilerOptions": 
	{
		"module": "es2020",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "dist",
		"sourceMap": true,
		"target": "ES6",
		"lib": ["es2022", "dom"],
		"types": [],
		"declaration": true,
		"moduleResolution": "node",
		"paths": 
		{
			"@wmk/*": ["./src/*"],
			"@reswmk/*": ["./res/*"],
		}
	},
	"include": 
	[
		"src/**/*.ts",
		"val/**/*.ts",
		"res/**/*.svg",
	],
	"exclude":
	[
		"node_modules"
	]
}
